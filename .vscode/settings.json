{
  // Enable Biome for this workspace
  "biome.enabled": true,

  // Set Biome as the default formatter for supported languages
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Automatically format files on save
  "editor.formatOnSave": true,

  // Optional: run Biomeâ€™s linter as you type
  "biome.lintOnSave": true,

  // Optional: prefer Biome formatting over Prettier or ESLint if installed
  "editor.defaultFormatter": "biomejs.biome"
}
